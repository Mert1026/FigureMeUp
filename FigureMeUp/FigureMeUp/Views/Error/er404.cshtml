@{
    ViewData["Title"] = "Page Not Found";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center py-5">
            <div class="error-page">
                <div class="error-icon mb-4">
                    <i class="fas fa-robot fa-5x text-white"></i>
                </div>

                <h1 class="error-code display-1 fw-bold text-white mb-3">404</h1>

                <h2 class="error-title h3 mb-4 text-white">Oops! Page Not Found</h2>

                <p class="error-description lead text-white mb-4">
                    The page you're looking for seems to have wandered off into the digital void.
                    Our robots are searching for it, but in the meantime, let's get you back on track!
                </p>


            </div>
        </div>
    </div>
</div>

<style>  
    .error-page {  
        animation: fadeIn 0.5s ease-in;  
    }  

    .error-icon {  
        animation: bounce 2s infinite;  
    }  

    .error-code {  
        background: linear-gradient(45deg, #007bff, #0056b3);  
        -webkit-background-clip: text;  
        -webkit-text-fill-color: transparent;  
        background-clip: text;  
    }  

    .card:hover {  
        transform: translateY(-2px);  
        transition: transform 0.2s ease;  
    }  
</style>