@model FigureMeUp.Data.Models.View_models.ProfileDetailsViewModel
@{
    ViewData["Title"] = "Profile Details";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0">
                    <i class="fas fa-user-circle me-2"></i>Profile Details
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-4">
                        <div class="profile-avatar bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 120px; height: 120px; font-size: 3rem;">
                            <i class="fas fa-user"></i>
                        </div>
                        <h4 class="mt-3">@Model.UserName</h4>
                        <p class="text-muted">Community Member</p>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-robot fa-2x text-primary mb-2"></i>
                                        <h5 class="card-title">My Figures</h5>
                                        <a asp-action="MyFigures" class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-newspaper fa-2x text-success mb-2"></i>
                                        <h5 class="card-title">My Posts</h5>
                                        <a asp-action="MyPosts" class="btn btn-success btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                                        <h5 class="card-title">Liked Content</h5>
                                        <a asp-action="LikedContent" class="btn btn-danger btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <i class="fas fa-plus fa-2x text-warning mb-2"></i>
                                        <h5 class="card-title">Quick Add</h5>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Figures" asp-action="Create" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-robot"></i>
                                            </a>
                                            <a asp-controller="Posts" asp-action="Create" class="btn btn-outline-success btn-sm">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-info-circle me-2"></i>Account Information</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Username:</strong></td>
                                <td>@Model.UserName</td>
                            </tr>
                            <tr>
                                <td><strong>Email:</strong></td>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <td><strong>Member Since:</strong></td>
                                <td>@DateTime.Now.ToString("MMMM yyyy")</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-chart-bar me-2"></i>Statistics</h5>
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="stat-item">
                                    <div class="stat-number text-primary">@Model.FiguresCount</div>
                                    <div class="stat-label small text-muted">Figures</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <div class="stat-number text-success">@Model.PostsCount</div>
                                    <div class="stat-label small text-muted">Posts</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <div class="stat-number text-danger">0</div>
                                    <div class="stat-label small text-muted">Favorites</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
