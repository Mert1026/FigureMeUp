@model IEnumerable<FigureMeUp.Data.Models.View_models.AdminUserViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2 text-warning"></i>Manage All Users</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

<!-- Filter Controls -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-2">
                <select class="form-select" id="statusFilter">
                    <option value="">All Users</option>
                    <option value="active">Active Users</option>
                    <option value="deleted">Deleted Users</option>
                    <option value="banned">Banned Users</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" id="searchUsername" placeholder="Search by username...">
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" id="searchEmail" placeholder="Search by email...">
            </div>
            <div class="col-md-2">
                <input type="date" class="form-control" id="dateFilter" title="Registration date">
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary" onclick="applyFilters()">
                    <i class="fas fa-filter me-1"></i>Filter
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Card -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-users fa-2x mb-2"></i>
                <h4 id="totalUsers">@Model.Count()</h4>
                <small>Total Users</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-user-check fa-2x mb-2"></i>
                <h4 id="activeUsers">@Model.Count()</h4>
                <small>Active Users</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <i class="fas fa-user-times fa-2x mb-2"></i>
                <h4 id="bannedUsers">@Model.Count(u => u.IsBanned)</h4>
                <small>Banned Users</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <i class="fas fa-user-slash fa-2x mb-2"></i>
                <h4 id="deletedUsers">@Model.Count()</h4>
                <small>Deleted Users</small>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Joined</th>
                    <th>Last Login</th>
                    <th>Posts</th>
                    <th>Figures</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="@(user.IsBanned ? "table-warning" : "")">
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-2 d-flex align-items-center justify-content-center bg-primary text-white rounded-circle"
                                     style="width: 40px; height: 40px;">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div>
                                    <strong>@user.UserName</strong>
                                    <br>
                                    <small class="text-muted">ID: @user.Id.Substring(0, 8)...</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <small>@user.Email</small>
                        </td>
                        <td>
                            <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </td>
                        <td>
                            <span class="badge bg-info">
                                <i class="fas fa-newspaper me-1"></i>@user.PostsCount
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-success">
                                <i class="fas fa-robot me-1"></i>@user.FiguresCount
                            </span>
                        </td>
                        <td>
                            @if (user.IsBanned)
                            {
                                <span class="badge bg-warning text-dark">Banned</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (user.IsBanned)
                                {
                                    <button type="button" class="btn btn-outline-success btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#unbanUserModal@(user.Id.Replace("-", ""))" title="Unban User">
                                        <i class="fas fa-user-check"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#deleteUserModal@(user.Id.Replace("-", ""))" title="Delete User">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-outline-warning btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#banUserModal@(user.Id.Replace("-", ""))" title="Ban User">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#deleteUserModal@(user.Id.Replace("-", ""))" title="Delete User">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                            </div>

                            <!-- Ban User Modal -->
                            @if (!user.IsBanned)
                            {
                                <div class="modal fade" id="banUserModal@(user.Id.Replace("-", ""))" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Ban User</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to ban user <strong>"@user.UserName"</strong>?</p>
                                                <p class="text-muted small">Banned users cannot log in or access the platform.</p>
                                                <div class="alert alert-info">
                                                    <strong>User Stats:</strong><br>
                                                    Posts: @user.PostsCount | Figures: @user.FiguresCount<br>
                                                    Member since: @user.CreatedAt.ToString("MMM dd, yyyy")
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="BanUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-warning">
                                                        <i class="fas fa-ban me-1"></i>Ban User
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Unban User Modal -->
                            @if (user.IsBanned)
                            {
                                <div class="modal fade" id="unbanUserModal@(user.Id.Replace("-", ""))" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Unban User</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to unban user <strong>"@user.UserName"</strong>?</p>
                                                <p class="text-muted small">This will restore their access to the platform.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="UnbanUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="fas fa-user-check me-1"></i>Unban User
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Delete User Modal -->
                            

                            <!-- Restore User Modal -->
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-users fa-5x text-muted mb-4"></i>
        <h3 class="text-muted">No Users Found</h3>
        <p class="text-muted">There are no users to manage at the moment.</p>
    </div>
}

@section Scripts {
    <script>
        function applyFilters() {
            const status = document.getElementById('statusFilter').value;
            const username = document.getElementById('searchUsername').value.toLowerCase();
            const email = document.getElementById('searchEmail').value.toLowerCase();
            const date = document.getElementById('dateFilter').value;

            const rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                let showRow = true;

                // Status filter
                if (status) {
                    const isDeleted = row.classList.contains('table-danger');
                    const isBanned = row.classList.contains('table-warning');

                    if (status === 'active' && (isDeleted || isBanned)) showRow = false;
                    if (status === 'deleted' && !isDeleted) showRow = false;
                    if (status === 'banned' && !isBanned) showRow = false;
                }

                // Username filter
                if (username) {
                    const userUsername = row.cells[0].textContent.toLowerCase();
                    if (!userUsername.includes(username)) showRow = false;
                }

                // Email filter
                if (email) {
                    const userEmail = row.cells[1].textContent.toLowerCase();
                    if (!userEmail.includes(email)) showRow = false;
                }

                row.style.display = showRow ? '' : 'none';
            });

            // Update statistics
            updateStatistics();
        }

        function updateStatistics() {
            const visibleRows = document.querySelectorAll('tbody tr[style=""], tbody tr:not([style])');
            const totalVisible = visibleRows.length;

            let activeCount = 0;
            let bannedCount = 0;
            let deletedCount = 0;

            visibleRows.forEach(row => {
                if (row.classList.contains('table-danger')) {
                    deletedCount++;
                } else if (row.classList.contains('table-warning')) {
                    bannedCount++;
                } else {
                    activeCount++;
                }
            });

            document.getElementById('totalUsers').textContent = totalVisible;
            document.getElementById('activeUsers').textContent = activeCount;
            document.getElementById('bannedUsers').textContent = bannedCount;
            document.getElementById('deletedUsers').textContent = deletedCount;
        }
    </script>
}