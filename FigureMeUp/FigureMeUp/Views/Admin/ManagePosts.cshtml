@model IEnumerable<FigureMeUp.Data.Models.Post>
@{
    ViewData["Title"] = "Manage Posts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-newspaper me-2 text-primary"></i>Manage All Posts</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

<!-- Filter Controls -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-3 justify-content-center">
                <select class="form-select" id="statusFilter">
                    <option value="">All Posts</option>
                    <option value="active">Active Posts</option>
                    <option value="deleted">Deleted Posts</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control" id="searchUser" placeholder="Search by username...">
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary bg-primary border-0" onclick="applyFilters()">
                    <i class="fas fa-filter me-2"></i>Filter
                </button>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark bg-primary">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Created</th>
                    <th>Likes</th>
                    <th>Views</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr class="@(post.IsDeleted ? "table-danger" : "bg-white")">
                        <td>
                            <div class="d-flex align-items-center">
                                @if (post.ImageUrls.Any())
                                {
                                    <img src="@post.ImageUrls.First()" alt="Post thumbnail"
                                         class="me-2 rounded" style="width: 40px; height: 40px; object-fit: cover;">
                                }
                                <div>
                                    <strong>@post.Title</strong>
                                    <br>
                                    <small class="text-muted">
                                        @post.Content.Substring(0, Math.Min(50, post.Content.Length))@(post.Content.Length > 50 ? "..." : "")
                                    </small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user me-2 text-muted"></i>
                                @(post.Publisher?.UserName ?? "Unknown")
                            </div>
                        </td>
                        <td>
                            <small>@post.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </td>
                        <td>
                            <span class="badge bg-danger">
                                <i class="fas fa-heart me-1"></i>@post.LikesCount
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-info">
                                <i class="fas fa-eye me-1"></i>@post.ViewsCount
                            </span>
                        </td>
                        <td>
                            @if (post.IsDeleted)
                            {
                                <span class="badge bg-danger">Deleted</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id"
                                   class="btn btn-outline-primary btn-sm" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>

                                @if (!post.IsDeleted)
                                {
                                    <a asp-controller="Posts" asp-action="Edit" asp-route-id="@post.Id"
                                       class="btn btn-outline-secondary btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#deletePostModal@(post.Id)" title="Soft Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-dark btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#hardDeletePostModal@(post.Id)" title="Hard Delete">
                                        <i class="fas fa-times"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-outline-success btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#restorePostModal@(post.Id)" title="Restore">
                                        <i class="fas fa-undo"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-dark btn-sm"
                                            data-bs-toggle="modal" data-bs-target="#hardDeletePostModal@(post.Id)" title="Hard Delete">
                                        <i class="fas fa-times"></i>
                                    </button>
                                }
                            </div>

                            @if (!post.IsDeleted)
                            {
                                <!-- Soft Delete Modal -->
                                <div class="modal fade" id="deletePostModal@(post.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Soft Delete Post</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete the post <strong>"@post.Title"</strong>?</p>
                                                <p class="text-muted small">This will soft delete the post. It can be restored later.</p>
                                                @if (post.ImageUrls.Any())
                                                {
                                                    <img src="@post.ImageUrls.First()" alt="@post.Title"
                                                         class="img-thumbnail mt-2" style="max-width: 200px;">
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="DeletePost" asp-route-id="@post.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fas fa-trash me-1"></i>Soft Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Restore Modal -->
                                <div class="modal fade" id="restorePostModal@(post.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Restore Post</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to restore the post <strong>"@post.Title"</strong>?</p>
                                                <p class="text-muted small">This will make the post visible to users again.</p>
                                                @if (post.ImageUrls.Any())
                                                {
                                                    <img src="@post.ImageUrls.First()" alt="@post.Title"
                                                         class="img-thumbnail mt-2" style="max-width: 200px;">
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="RestorePost" asp-route-id="@post.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="fas fa-undo me-1"></i>Restore
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <!-- Restore Modal for Deleted Posts -->
                                <div class="modal fade" id="restorePostModal@(post.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Restore Post</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to restore the post <strong>"@post.Title"</strong>?</p>
                                                <p class="text-muted small">This will make the post visible to users again.</p>
                                                @if (post.ImageUrls.Any())
                                                {
                                                    <img src="@post.ImageUrls.First()" alt="@post.Title"
                                                         class="img-thumbnail mt-2" style="max-width: 200px;">
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="RestorePost" asp-route-id="@post.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="fas fa-undo me-1"></i>Restore
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Hard Delete Modal (Available for both active and deleted posts) -->
                            <div class="modal fade" id="hardDeletePostModal@(post.Id)" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content border-danger">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">
                                                <i class="fas fa-exclamation-triangle me-2"></i>Permanent Delete Post
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="alert alert-danger" role="alert">
                                                <i class="fas fa-exclamation-triangle me-2"></i>
                                                <strong>Warning!</strong> This action cannot be undone.
                                            </div>
                                            <p>Are you sure you want to <strong>permanently delete</strong> the post <strong>"@post.Title"</strong>?</p>
                                            <p class="text-danger small">This will completely remove the post from the database. This action is irreversible!</p>
                                            @if (post.ImageUrls.Any())
                                            {
                                                <img src="@post.ImageUrls.First()" alt="@post.Title"
                                                     class="img-thumbnail mt-2" style="max-width: 200px;">
                                            }
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <form asp-action="HardDeletePost" asp-route-id="@post.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-dark">
                                                    <i class="fas fa-times me-1"></i>Permanently Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-newspaper fa-5x text-muted mb-4"></i>
        <h3 class="text-muted">No Posts Found</h3>
        <p class="text-muted">There are no posts to manage at the moment.</p>
    </div>
}

@section Scripts {
    <script>
        function applyFilters() {
            const status = document.getElementById('statusFilter').value;
            const user = document.getElementById('searchUser').value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                let showRow = true;

                // Status filter
                if (status) {
                    const isDeleted = row.classList.contains('table-danger');
                    if (status === 'active' && isDeleted) showRow = false;
                    if (status === 'deleted' && !isDeleted) showRow = false;
                }

                // User filter
                if (user) {
                    const username = row.cells[1].textContent.toLowerCase();
                    if (!username.includes(user)) showRow = false;
                }

                row.style.display = showRow ? '' : 'none';
            });
        }

        // Reset filters
        function resetFilters() {
            document.getElementById('statusFilter').value = '';
            document.getElementById('searchUser').value = '';
            applyFilters();
        }
    </script>
}