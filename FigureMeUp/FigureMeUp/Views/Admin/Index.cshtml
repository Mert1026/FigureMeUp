@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Admin Dashboard</h2>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100 border-primary">
            <div class="card-body text-center">
                <i class="fas fa-newspaper fa-3x text-icon mb-3"></i>
                <h4 class="card-title">Manage Posts</h4>
                <p class="card-text">View, edit, delete, and restore posts from all users</p>
                <a asp-action="ManagePosts" class="btn btn-primary bg-primary border-0">
                    <i class="fas fa-cog me-2"></i>Manage Posts
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100 border-success">
            <div class="card-body text-center">
                <i class="fas fa-robot fa-3x text-success mb-3"></i>
                <h4 class="card-title">Manage Figures</h4>
                <p class="card-text">View, edit, delete, and restore figures from all users</p>
                <a asp-action="ManageFigures" class="btn btn-success">
                    <i class="fas fa-cog me-2"></i>Manage Figures
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100 border-warning">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-warning mb-3"></i>
                <h4 class="card-title">Manage Users</h4>
                <p class="card-text">View, ban, unban, and soft delete user accounts</p>
                <a asp-action="ManageUsers" class="btn btn-warning">
                    <i class="fas fa-cog me-2"></i>Manage Users
                </a>
            </div>
        </div>
    </div>
</div>

