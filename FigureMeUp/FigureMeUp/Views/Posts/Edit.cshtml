@model FigureMeUp.Data.Models.View_models.PostViewModel
@{
    ViewData["Title"] = "Edit Post";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Post
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">
                            <i class="fas fa-heading me-1"></i>Post Title
                        </label>
                        <input asp-for="Title" class="form-control" placeholder="Enter an engaging title for your post" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">
                            <i class="fas fa-align-left me-1"></i>Content
                        </label>
                        <textarea asp-for="Content" class="form-control" rows="8" placeholder="Share your thoughts, experiences, or stories with the community..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-images me-1"></i>Image URLs (Optional)
                        </label>
                        <div id="imageUrls">
                            @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                            {
                                @for (int i = 0; i < Model.ImageUrls.Count; i++)
                                {
                                    <div class="input-group mb-2">
                                        <input type="text" name="ImageUrls" value="@Model.ImageUrls[i]" class="form-control" placeholder="Enter image URL" />
                                        <button type="button" class="btn btn-outline-danger" onclick="removeImageUrl(this)" style="display: @(Model.ImageUrls.Count > 1 ? "block" : "none");">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="input-group mb-2">
                                    <input type="text" name="ImageUrls" class="form-control" placeholder="Enter image URL" />
                                    <button type="button" class="btn btn-outline-danger" onclick="removeImageUrl(this)" style="display: none;">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="addImageUrl()">
                            <i class="fas fa-plus me-1"></i>Add Another Image
                        </button>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle me-1"></i>Posts with multiple images will show a "View Details" button
                        </small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-hashtag me-1"></i>Hashtags (Optional)
                        </label>
                        <div id="hashtags">
                            @if (Model.Hashtags != null && Model.Hashtags.Any())
                            {
                                @for (int i = 0; i < Model.Hashtags.Count; i++)
                                {
                                    <div class="input-group mb-2">
                                        <input type="text" name="Hashtags" value="@Model.Hashtags[i]" class="form-control" placeholder="Enter hashtag (without #)" />
                                        <button type="button" class="btn btn-outline-danger" onclick="removeHashtag(this)" style="display: @(Model.Hashtags.Count > 1 ? "block" : "none");">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="input-group mb-2">
                                    <input type="text" name="Hashtags" class="form-control" placeholder="Enter hashtag (without #)" />
                                    <button type="button" class="btn btn-outline-danger" onclick="removeHashtag(this)" style="display: none;">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="addHashtag()">
                            <i class="fas fa-plus me-1"></i>Add Another Hashtag
                        </button>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle me-1"></i>Use hashtags to help others discover your content
                        </small>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <i class="fas fa-user me-2"></i>
                                <strong>Author:</strong> @Model.AuthorName
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <i class="fas fa-calendar me-2"></i>
                                <strong>Originally Posted:</strong> @Model.PostedOn
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-lightbulb text-warning me-2"></i>Editing Tips
                            </h6>
                            <ul class="mb-0 small">
                                <li>Make sure your title still reflects the content</li>
                                <li>Update hashtags if you've changed the topic</li>
                                <li>Consider adding new images if they enhance your post</li>
                                <li>Review your changes before updating</li>
                            </ul>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Update Post
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function addImageUrl() {
            const container = document.getElementById('imageUrls');
            const div = document.createElement('div');
            div.className = 'input-group mb-2';
            div.innerHTML = `
                <input type="text" name="ImageUrls" class="form-control" placeholder="Enter image URL" />
                <button type="button" class="btn btn-outline-danger" onclick="removeImageUrl(this)">
                    <i class="fas fa-times"></i>
                </button>
            `;
            container.appendChild(div);
            updateRemoveButtons('imageUrls');
        }

        function removeImageUrl(button) {
            button.parentElement.remove();
            updateRemoveButtons('imageUrls');
        }

        function addHashtag() {
            const container = document.getElementById('hashtags');
            const div = document.createElement('div');
            div.className = 'input-group mb-2';
            div.innerHTML = `
                <input type="text" name="Hashtags" class="form-control" placeholder="Enter hashtag (without #)" />
                <button type="button" class="btn btn-outline-danger" onclick="removeHashtag(this)">
                    <i class="fas fa-times"></i>
                </button>
            `;
            container.appendChild(div);
            updateRemoveButtons('hashtags');
        }

        function removeHashtag(button) {
            button.parentElement.remove();
            updateRemoveButtons('hashtags');
        }

        function updateRemoveButtons(containerId) {
            const container = document.getElementById(containerId);
            const buttons = container.querySelectorAll('.btn-outline-danger');
            buttons.forEach((button, index) => {
                button.style.display = buttons.length > 1 ? 'block' : 'none';
            });
        }

        // Initialize remove buttons visibility on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateRemoveButtons('imageUrls');
            updateRemoveButtons('hashtags');
        });
    </script>
}