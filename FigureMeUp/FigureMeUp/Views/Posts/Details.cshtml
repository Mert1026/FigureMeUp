@model FigureMeUp.Data.Models.Post
@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-body bg-body rounded-3">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div class="flex-grow-1">
                        <h1 class="mb-3">@Model.Title</h1>
                        <div class="d-flex align-items-center mb-3">
                            <small class="text-muted me-4">
                                <i class="fas fa-user me-1"></i>by @(Model.Publisher?.UserName ?? "Unknown")
                            </small>
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                    @if (User.Identity.IsAuthenticated && Model.PublisherId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cog"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.Id">
                                        <i class="fas fa-edit me-2"></i>Edit
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="fas fa-trash me-2"></i>Delete
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>

              

                <div class="mb-4">
                    <div class="post-content">
                        @Html.Raw(Html.Encode(Model.Content).Replace("\n", "<br />"))
                    </div>
                </div>

                @if (Model.ImageUrls.Any())
                {
                    <div class="mb-4">
                        @if (Model.ImageUrls.Count() == 1)
                        {
                            <img src="@Model.ImageUrls.First()" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 600px; width: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <div id="postCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    @for (int i = 0; i < Model.ImageUrls.Count(); i++)
                                    {
                                        <button type="button" data-bs-target="#postCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                                    }
                                </div>
                                <div class="carousel-inner">
                                    @{
                                        int index = 0;
                                    }
                                    @foreach (var imageUrl in Model.ImageUrls)
                                    {
                                        <div class="carousel-item @(index == 0 ? "active" : "")">
                                            <img src="@imageUrl" class="d-block w-100 rounded" alt="@Model.Title" style="height: 500px; object-fit: cover;">
                                        </div>
                                        index++;
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#postCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#postCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        }
                    </div>
                }

                @if (Model.Hashtags.Any())
                {
                    <div class="mb-4">
                        <h5>Tags</h5>
                        @foreach (var hashtag in Model.Hashtags)
                        {
                            <span class="badge bg-secondary me-1 mb-1">#@hashtag.Name</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow sticky-top" style="top: 20px;">
            <div class="card-header bg-primary">
                <h5 class="card-title mb-0 text-primary">
                    <i class="fas fa-info-circle me-2 text-primary"></i>Post Details
                </h5>
            </div>
            <div class="card-body bg-body rounded-3">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Title:</strong></td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td><strong>Author:</strong></td>
                        <td>@(Model.Publisher?.UserName ?? "Unknown")</td>
                    </tr>
                    <tr>
                        <td><strong>Published:</strong></td>
                        <td>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <td><strong>Images:</strong></td>
                        <td>@Model.ImageUrls.Count()</td>
                    </tr>
                    <tr>
                        <td><strong>Tags:</strong></td>
                        <td>@Model.Hashtags.Count()</td>
                    </tr>
                </table>
                @if(Model.IsDeleted != true)
                {
                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Posts
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-grid gap-2 mt-4">
                        <p class="fw-bold text-danger">Deleted</p>                     
                    </div>
                }

            </div>
        </div>

        
    </div>
</div>

@if (User.Identity.IsAuthenticated && Model.PublisherId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
{
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the post "<strong>@Model.Title</strong>"? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
      
        
        $(document).ready(function() {
            $('.like-btn').click(function(e) {
                e.preventDefault();
                var postId = $(this).data('post-id');
                var button = $(this);

                $.post('/Posts/ToggleLike/' + postId, function(data) {
                    if (data.success) {
                        if (data.isLiked) {
                            button.removeClass('btn-outline-danger').addClass('btn-danger');
                            button.find('.like-text').text('Unlike');
                        } else {
                            button.removeClass('btn-danger').addClass('btn-outline-danger');
                            button.find('.like-text').text('Like');
                        }
                        $('.like-counter').text(data.likesCount);
                        $('.like-label').text(data.likesCount === 1 ? 'like' : 'likes');
                    }
                });
            });
        });
       
    </script>
}